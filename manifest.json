{
  "name": "Tree Style Tabs for Edge",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "Tab management made easy.",
  "icons": {
    "16": "icons/nasapod16x16.png",
    "32": "icons/nasapod32x32.png",
    "48": "icons/nasapod48x48.png",
    "128": "icons/nasapod128x128.png"
  },
  "action": {
    "default_popup": "src/pages/popup.html"
  },
  "background": {
    "service_worker": "src/javascript/background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "tabGroups",
    "storage",
    "scripting",
    "unlimitedStorage",
    "history",
    "sessions",
    "windows"
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
}
